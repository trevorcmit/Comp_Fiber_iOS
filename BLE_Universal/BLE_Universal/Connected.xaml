    <ContentPage.Content>
        <StackLayout Orientation="Vertical">

            <Grid HeightRequest="3000" RowSpacing="0" > <!-- Overarching grid to hold fibers -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*" /> <!-- Row 0 -->
                    <RowDefinition Height="0.15*" /> <!-- Row 1 -->
                    <RowDefinition Height="0.15*" /> <!-- Row 2 -->
                    <RowDefinition Height="0.15*" /> <!-- Row 3 -->
                    <RowDefinition Height="0.15*" /> <!-- Row 4 -->

                    <RowDefinition Height="0.01*" />
                    <RowDefinition Height="0.24*" /> <!-- Row 6 -->
                </Grid.RowDefinitions>

                <Grid Grid.Row="6" Grid.Column="0" HeightRequest="600">
                    <Grid.ColumnDefinitions><ColumnDefinition/></Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.33*" />
                        <RowDefinition Height="0.33*" />
                        <RowDefinition Height="0.33*" />
                    </Grid.RowDefinitions>
                    <BoxView Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Color="#000000" />
                    <Button
                        Grid.Row="0" Grid.Column="0" FontSize="18"
                        Text="Start Data Collection (0x0C)" TextColor="White"
                        Clicked="OnStartClicked" BackgroundColor="#008F1F"
                    />
                    <Button
                        Grid.Row="1" Grid.Column="0" FontSize="18"
                        Text="Resume Temperature Reading" TextColor="White"
                        Clicked="OnCollectClicked" BackgroundColor="#0F00BF"
                    />
                    <Button
                        Grid.Row="2" Grid.Column="0" FontSize="18"
                        Text="Chip Erase (0xCE)" TextColor="White"
                        Clicked="OnChipErase" BackgroundColor="#990F0F"
                    />
                </Grid>

                <!-- Fiber 1 -->
                <Grid Grid.Row="0" Grid.Column="0" HeightRequest="1000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.8*" />
                    </Grid.RowDefinitions>

                    <BoxView x:Name="Box1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2"/>
                    <Label x:Name="Fiber1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" TextColor="#000000" FontSize="20" FontAttributes="Bold" />

                    <ListView
                        x:Name="Temp1_1" CachingStrategy="RecycleElement"
                        Grid.Row="1" Grid.Column="0" VerticalOptions="Center"
                    >
                        <ListView.Header>
                            <Label Text="Forearm" FontSize="16" />
                        </ListView.Header>
                        <ListView.ItemTemplate><DataTemplate><ViewCell><StackLayout>
                            <Label Text="{Binding .}" FontSize="36" FontAttributes="Bold" />
                        </StackLayout></ViewCell></DataTemplate></ListView.ItemTemplate>
                    </ListView>
                    <ListView
                        x:Name="Temp1_2" CachingStrategy="RecycleElement"
                        Grid.Row="1" Grid.Column="1" VerticalOptions="Center"
                    >
                        <ListView.Header>
                            <Label Text="Underarm" FontSize="16" />
                        </ListView.Header>
                        <ListView.ItemTemplate><DataTemplate><ViewCell><StackLayout>
                            <Label Text="{Binding .}" FontSize="36" FontAttributes="Bold" />
